    <vm_mgmt type="private" network="10.250.0.0" mask="24" offset="0">
       <host_mapping />
    </vm_mgmt>
    <vm_defaults>
        <console id="0" display="no"/>
        <console id="1" display="yes"/>
    </vm_defaults>

  </global>
  <net name="Net0" mode="virtual_bridge"/>
  <net name="Net1" mode="virtual_bridge"/>
  <net name="Net2" mode="virtual_bridge"/>
  <net name="Net3" mode="virtual_bridge"/>
  <net name="virbr0" mode="virtual_bridge" managed="no"/>

  <vm name="PE1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.1/24</ipv4>
    </if>
    <if id="2" net="Net1">
      <ipv4>10.1.0.1/30</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.2">default</route>
    <forwarding type="ip" />
    <filetree seq="on_boot" root="/etc/hosts">conf/hosts</filetree>
    <filetree seq="on_boot" root="/root/" perms="777">conf/slices_conf.sh</filetree>
    <filetree seq="on_boot" root="/root/" perms="777">conf/Prueba2/slices_IETF_conf.sh</filetree>
    <filetree seq="on_boot" root="/root/" perms="777">conf/Prueba4</filetree>
    <filetree seq="on_boot" root="/root/" perms="777">conf/Prueba5</filetree>
    <exec seq="on_boot" type="verbatim">
	    echo "nameserver 8.8.8.8" >> /etc/resolv.conf
 	    echo 1 > /proc/sys/net/ipv4/ip_forward
    </exec>
  </vm>

  <vm name="PE2" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net2">
      <ipv4>10.1.0.66/30</ipv4>
    </if>
    <if id="2" net="Net3">
      <ipv4>10.2.0.1/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.65">default</route>
    <filetree seq="on_boot" root="/root/" perms="777">conf/slices_conf_PE2.sh</filetree>
    <filetree seq="on_boot" root="/root/" perms="777">conf/Prueba4/slices_conf_PE2_test4.sh</filetree>
    <filetree seq="on_boot" root="/etc/hosts" perms="755">conf/hosts</filetree>
    <filetree seq="on_boot" root="/usr/bin/" perms="755">/usr/bin/vnx_config_nat</filetree>    
    <route type="ipv4" gw="10.1.0.1">10.0.0.0/24</route>
    <forwarding type="ip" />
    <exec seq="on_boot" type="verbatim">
       sleep 1
       dhclient eth9
       sleep 1
       /usr/bin/vnx_config_nat eth1 eth9
       echo "nameserver 8.8.8.8" >> /etc/resolv.conf
       echo 1 > /proc/sys/net/ipv4/ip_forward
    </exec>
  </vm>

